#!/bin/bash

set -euxo pipefail

ROOT=$(cd $(dirname ${BASH_SOURCE[0]}); cd ..; pwd)

export IDEA_PROPERTIES=$(mktemp -t idea.properties)

cat <<END > $IDEA_PROPERTIES
idea.config.path=${ROOT}/etc/idea
idea.is.internal=true
idea.log.path=${ROOT}/var/log/idea
# idea.plugins.path=
idea.system.path=${ROOT}/var/run/idea
END

open -a ${ROOT}/var/tmp/lib/idea/IntelliJ\ IDEA\ CE.app
